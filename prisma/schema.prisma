// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String  @unique
  hash     String
  hashedRt String?
  roles    Role[]  @default([USER])
  image    String?

  organisedEvents   Event[]   @relation("OrganisedEvents")
  speakingLectures  Lecture[] @relation("SpeakerLectures")
  attendingLectures Lecture[] @relation("ParticipantLectures")
  Message           Message[]

  @@map("users")
}

model Event {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lat         Decimal
  lng         Decimal
  name        String
  location    String
  startDate   DateTime
  endDate     DateTime
  organiserId Int
  organiser   User      @relation("OrganisedEvents", fields: [organiserId], references: [id])
  lectures    Lecture[] @relation("EventLectures")
  eventType   EventType
  image       String?
  description String

  @@map("events")
}

model Lecture {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  startTime   DateTime
  endTime     DateTime

  eventId      Int?
  event        Event? @relation("EventLectures", fields: [eventId], references: [id])
  speakerId    Int
  speaker      User   @relation("SpeakerLectures", fields: [speakerId], references: [id])
  participants User[] @relation("ParticipantLectures")

  @@map("lectures")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  senderId  Int
  sender    User     @relation(fields: [senderId], references: [id])
  createdAt DateTime @default(now())

  @@map("messages")
}

enum Role {
  USER
  ADMIN
  SPEAKER
  ORGANISER
}

enum EventType {
  LECTURE
  CONFERENCE
  MONASTERY
  WORKSHOP
  MEETUP
}
