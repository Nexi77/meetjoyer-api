// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String  @unique
  hash     String
  hashedRt String?
  roles    Role[]  @default([USER])

  organisedEvents   Event[]   @relation("OrganisedEvents")
  speakingLectures  Lecture[] @relation("SpeakerLectures")
  attendingLectures Lecture[] @relation("ParticipantLectures")
  Message           Message[]

  @@map("users")
}

model Event {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  location    String
  organiserId Int
  organiser   User      @relation("OrganisedEvents", fields: [organiserId], references: [id])
  lectures    Lecture[] @relation("EventLectures")
  eventType   EventType

  @@map("events")
}

model Chat {
  id        Int       @id @default(autoincrement())
  lectureId Int       @unique
  lecture   Lecture   @relation(fields: [lectureId], references: [id])
  messages  Message[]

  @@map("chats")
}

model Lecture {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  startTime   DateTime
  endTime     DateTime

  eventId      Int
  event        Event  @relation("EventLectures", fields: [eventId], references: [id])
  speakerId    Int
  speaker      User   @relation("SpeakerLectures", fields: [speakerId], references: [id])
  participants User[] @relation("ParticipantLectures")
  chat         Chat?

  @@map("lectures")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  senderId  Int
  sender    User     @relation(fields: [senderId], references: [id])
  chatId    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())

  @@map("messages")
}

enum Role {
  USER
  ADMIN
  SPEAKER
  ORGANISER
}

enum EventType {
  LECTURE
  CONFERENCE
  MONASTERY
  WORKSHOP
  MEETUP
}
